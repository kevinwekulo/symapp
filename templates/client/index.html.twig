{% extends 'layout.html.twig' %}

{% block content %}
    <h1>Clients</h1>

    <a href="{{ path('app_client_new') }}" class="btn btn-primary mb-3">Add New Client</a>

    {% if clients is empty %}
        <p>No clients found.</p>
    {% else %}
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Phone</th>
                </tr>
            </thead>
            <tbody>
                {% for client in clients %}
                    <tr>
                        <td>{{ client.name }}</td>
                        <td>{{ client.phone }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock %}
